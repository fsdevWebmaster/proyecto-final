{
    "compilerOptions": {
      "baseUrl": "./",
      "target": "ESNext",
      "useDefineForClassFields": true,
      "lib": ["DOM", "DOM.Iterable", "ESNext"],
      "allowJs": false,
      "skipLibCheck": true,
      "esModuleInterop": false,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "ESNext",
      "moduleResolution": "Node",
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "jsx": "react-jsx",
      "paths": {
        "@assets/*": ["src/assets/*"],
        "@common": ["src/common"],
        "@common/*": ["src/common/*"],
        "@hooks": ["src/hooks/*"],
        "@components": ["src/components"],
        "@components/*": ["src/components/*"],
        "@helpers": ["src/helpers"],
        "@helpers/*": ["src/helpers/*"],
        "@layouts/*": ["src/layouts/*"],
        "@models": ["src/models"],
        "@models/*": ["src/models/*"],
        "@pages": ["src/pages"],
        "@pages/*": ["src/pages/*"],
        "@services/*": ["src/services/*"],
        "@stores/*": ["src/stores/*"],
        "@styles/*": ["src/styles/*"],
      },      
    },
    "include": ["src"],
    "references": [{ "path": "./tsconfig.node.json" }]
  }